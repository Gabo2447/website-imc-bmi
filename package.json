    "@swc/core": "^1.15.1",
    "@tailwindcss/cli": "^4.1.17",
    "oxlint": "^1.28.0",
    "oxlint-tsgolint": "^0.5.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "chokidar": "^4.0.3"
  }
