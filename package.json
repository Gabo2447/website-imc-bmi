{
  "name": "website-imc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "check-types": "tsc --noEmit",
    "build:ts": "swc src/ -d dist/",
    "build:css": "pnpx @tailwindcss/cli -i ./src/styles/global.css -o ./dist/styles/styles.css --minify",
    "build": "pnpm run check-types && pnpm run build:ts && pnpm run build:css",
    "lint": "oxlint src/",
    "dev:css": "pnpx @tailwindcss/cli -i ./src/styles/global.css -o ./dist/styles/styles.css --watch",
    "dev:ts": "swc src/ -d dist/ -w",
    "dev": "pnpm run dev:css & pnpm run dev:ts &",
    "start": "pnpm run build"
  },
